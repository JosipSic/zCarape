<UserControl x:Class="Jezgro.Views.Artikli"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True" >
   <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition MinWidth="100" />
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <GridSplitter HorizontalAlignment="Right" Grid.Column="0" Width="7" Background="Gray" />

    <!-- Spisak svih artikala -->
    <StackPanel Grid.Column="0">
      <TextBlock Text="Spisak svih artikala"/>
      <ListView ItemsSource="{Binding Artikli}" Margin="10" VerticalAlignment="Stretch">
        
      </ListView>
    </StackPanel>

    <Grid Grid.Column="1">
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      
      <!-- Osnovni podaci o artiklu-->
      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition/>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Knjigovodstvena šifra"/>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
